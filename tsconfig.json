{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": "./src/core/",
    "paths": {
      "#layout": [ "layouts/Root.astro" ],
      "#assets/*": [ "../../public/*" ],
      "#*": [ "*" ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  }
}

