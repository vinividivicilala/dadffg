---
import { HOST } from '#constants/data'
import Layout from '#layout'
import params from '#libs/params'
import Markdown from '#layouts/content/Markdown.astro'
import type { CollectionEntry } from 'astro:content'

export const { getStaticPaths } = params('posts', 'post')

export type Props = { post: CollectionEntry<'posts'> }

const { post } = Astro.props

const image = `${HOST}/og/posts/${post.slug}.svg`
---

<Layout image={image}>
  <Markdown payload={post} />
</Layout>
