---
import components from '#components/mdx'
import Metadata from './Metadata.astro'

export type Props = PageProps
const {
  payload,
  payload: { data },
} = Astro.props
const { Content } = await payload.render()
---

<head>
  <link
  rel='preload'
  href='/code.woff2'
  as='font'
  type='font/woff2'
  crossorigin='anonymous'
/>

<style is:inline>
    @font-face {
    font-family: 'Cascadia Code';
    src: url('/code.woff2') format('woff2');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
</style>
</head>

<article>
  <Metadata payload={payload} />
  <Content components={components} />
</article>

<style lang='scss'>
  article {
    max-width: 65ch;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
  }
</style>
